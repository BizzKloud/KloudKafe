<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/circular_corner"
    android:layout_width="550dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        style="@style/circular_corners_only_top"
        android:backgroundTint="@color/bizzlightblue"
        android:gravity="center"
        android:text="Place Order"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are You sure you want to place this Order ?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="@android:color/black"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/placeOrderCancelButton"
            android:layout_width="150dp"
            style="@style/login_button"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="22sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/placeOrderYesButton"
            android:layout_width="250dp"
            style="@style/login_button"
            android:layout_height="wrap_content"
            android:text="YES, PLACE ORDER"
            android:layout_marginStart="30dp"
            android:textSize="22sp"
            android:textColor="@color/white"
            />

    </LinearLayout>


</LinearLayout>