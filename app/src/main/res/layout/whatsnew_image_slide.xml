<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/whatsNewImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:indeterminateTint="#ff8800"
        android:translationZ="2dp"
        app:layout_constraintBottom_toTopOf="@+id/whatsNewImage"
        app:layout_constraintEnd_toStartOf="@+id/whatsNewImage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/whatsNewImage"
        app:layout_constraintTop_toBottomOf="@+id/whatsNewImage" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addtocartWhatsNew"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="150dp"
        android:backgroundTint="@color/bizzorange"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/addtocart_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>