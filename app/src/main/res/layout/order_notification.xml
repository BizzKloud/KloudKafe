<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/circular_corner"
    android:layout_width="570dp"
    android:layout_height="160dp"
    android:layout_gravity="center"
    android:orientation="horizontal">


    <FrameLayout
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/progressBarVenImageNotification"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:indeterminateTint="#ff8800"
                android:translationZ="2dp"
                android:visibility="visible"
                />

            <ImageView
                android:id="@+id/imageViewVenImageNotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:scaleType="fitXY"/>

        </FrameLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/textViewVenNameNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor Name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/notification"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID :"
                android:textColor="@android:color/black"
                android:textSize="@dimen/notification" />

            <TextView
                android:id="@+id/textViewVenOrderIdNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" # 1234567890_09"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/notification" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Status :"
                android:textColor="@android:color/black"
                android:textSize="@dimen/notification" />

            <TextView
                android:id="@+id/textViewOrderStatusNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Ready To Pick"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/notification" />

        </LinearLayout>

        </LinearLayout>

</LinearLayout>