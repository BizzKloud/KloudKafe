<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/lightgrey"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ihf_breakup"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkgrey"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text="Base Amount"
            android:textSize="@dimen/taxbreakup_label_and_amount"
            android:textStyle="bold"
            android:textColor="@color/darkgrey"
            />
        <TextView
            android:id="@+id/textViewBaseAmountIHFTaxPopup"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="$ 0.00"
            android:gravity="end"
            android:textSize="@dimen/taxbreakup_label_and_amount"
            android:textStyle="bold"
            android:textColor="@color/darkgrey"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewIHFTaxPopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:text="@string/internet_handling_fee"
            android:textSize="@dimen/taxbreakup_label_and_amount"
            android:textStyle="bold"
            android:textColor="@color/darkgrey"
            />
        <TextView
            android:id="@+id/textViewTotalTaxIHFTaxPopup"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="$ 0.00"
            android:gravity="end"
            android:textSize="@dimen/taxbreakup_label_and_amount"
            android:textStyle="bold"
            android:textColor="@color/darkgrey"
            />
    </LinearLayout>


</LinearLayout>