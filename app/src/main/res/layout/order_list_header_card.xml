<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/circular_corner"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <FrameLayout
                android:id="@+id/progressBarHolder"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:alpha="0.8"
                android:animateLayoutChanges="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ProgressBar
                    android:id="@+id/progressBarVenImage"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="#ff8800"
                    android:translationZ="2dp"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/venImageOrdersList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </FrameLayout>

            <TextView
                android:id="@+id/venNameOrdersList"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="BHAGAT TARACHAND"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="Order Id:  #"
                        android:textSize="22sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/textViewVenOrderId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="123456789_98"
                        android:textSize="22sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="start">


                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        style="@style/circle_textview_orderslist"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/textViewOrderList0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/circle_textview_orderslist"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/bizzorange"/>

                    </LinearLayout>
                    <!--<TextView-->
                        <!--android:id="@+id/textViewOrderList0"-->
                        <!--android:layout_width="60dp"-->
                        <!--android:layout_height="60dp"-->
                        <!--style="@style/circle_textview_orderslist"-->
                        <!--android:gravity="center"-->
                        <!--android:layout_marginStart="10dp"-->
                        <!--android:text="1"-->
                        <!--android:textSize="24sp"-->
                        <!--android:textStyle="bold"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:backgroundTint="@color/bizzorange"/>-->

                    <View
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:background="@color/bizzorange" />

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        style="@style/circle_textview_orderslist"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/textViewOrderList1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/circle_textview_orderslist"
                            android:gravity="center"
                            android:text="2"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/bizzorange"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:background="@color/bizzorange" />

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        style="@style/circle_textview_orderslist"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp" >

                        <TextView
                            android:id="@+id/textViewOrderList2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            style="@style/circle_textview_orderslist"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/bizzorange" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:weightSum="11">

                    <TextView
                        android:id="@+id/textViewOrderListStatus0"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Order Placed"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/textViewOrderListStatus1"
                        android:layout_weight="3.8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Order Accepted"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/textViewOrderListStatus2"
                        android:layout_weight="3.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Ready to Pick"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Payable Amount : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/rupeegreen"/>

            <TextView
                android:id="@+id/subTotalAmountOrdersList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="123456789.00"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/rupeegreen"/>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>



