<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorPrimaryDark">@color/bizzlightorange</item>
        <item name="colorAccent">@color/bizzorange</item>
        <!--<item name="colorControlNormal">@android:color/holo_orange_dark</item>-->
        <item name="android:color">@color/bizzorange</item>
        <item name="colorControlActivated">@color/bizzorange</item>
        <item name="android:colorForeground">@color/bizzorange</item>
        <!--<item name="android:colorControlHighlight">#ffff8800</item>-->
    </style>

    <style name="AppThemeTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="colorPrimary">@color/bizzorange</item>
        <item name="colorPrimaryDark">@color/bizzlightorange</item>
        <item name="colorAccent">@color/bizzorange</item>
        <item name="android:color">@color/bizzorange</item>
        <item name="colorControlActivated">@color/bizzorange</item>
        <!--<item name="android:colorForeground">#ffff8800</item>-->
        <!--<item name="android:colorControlHighlight">@color/bizzorange</item>-->
    </style>



    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="password_style" >
        <item name="android:background">@drawable/gradient_password</item>
    </style>

    <style name="login_button" >
        <item name="android:background">@drawable/login_button</item>
    </style>

    <style name="paynow_button" >
        <item name="android:background">@drawable/paynow_button</item>
    </style>

    <style name="increase_decrease_button" >
        <item name="android:background">@drawable/increase_decrease_button</item>
    </style>

    <style name="addtocart_button" >
        <item name="android:background">@drawable/addtocart_button</item>
    </style>

    <style name="tab_layout" parent="Widget.Design.TabLayout" >
        <item name="tabTextAppearance">@style/tab_text_appearance</item>
    </style>

    <style name="tab_text_appearance" parent="TextAppearance.Design.Tab" >
        <item name="android:textSize">18sp</item>
    </style>

    <style name="youmayalsolike_title" >
        <item name="android:background">@drawable/youmayalsolike_title</item>
    </style>

    <style name="RatingBar" parent="AppThemeTitle">
        <!--<item name="colorControlNormal">@android:color/transparent</item>-->
        <item name="colorAccent">@color/bizzorange</item>
        <item name="colorControlActivated">@color/bizzorange</item>
    </style>

</resources>
